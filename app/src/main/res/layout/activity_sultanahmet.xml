<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sultanahmet"
    android:background="@drawable/login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/sultanahmet"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/sultanahmet" />

        <ImageView
            android:id="@+id/sultanahmet2"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/sultanahmet4" />

        <ImageView
            android:id="@+id/sultanahmet3"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/sultanahmet3" />

        <ImageView
            android:id="@+id/sultanahmet4"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/sultanahmet2" />


    </ViewFlipper>

    <TextView
        android:id="@+id/tv_sultanahmet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:text="SULTAN AHMET"
        android:textColor="#cfffff"
        android:textSize="25sp" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/aciklama"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="360dp"
        android:text="İç duvarlarını süsleyen göz alıcı desenlerin renginden dolayı yurt dışında “Blue Mosque” (Mavi Cami) adıyla anılan Sultanahmet Camii .  Sultan I. Ahmet’in emri doğrultusunda 1609-1616 yılları arasında inşa edilmiştir . Osmanlı sınırları içerisindeki ilk ve tek 6 minareli cami olarak biliniyor. Ziyaret sırasında İstanbul’un en iyi müezzinlerinin okudukları ezanları dinleme olanağı bulabileceğiniz caminin duvarlarını İznik’ten ve Kütahya’dan getirilen yaklaşık 22.000 çini süslüyor. "
        android:textColor="#cc9962"
        android:textSize="19sp"
        android:textStyle="bold" />

        </ScrollView>

    <ImageView
        android:id="@+id/ileri"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/oksag" />

    <ImageView
        android:id="@+id/geri"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="265dp"
        android:layout_marginStart="0dp"
        app:srcCompat="@drawable/oksol"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/resimaciklama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ileri"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Resimleri Değiştirmek için"
        android:textColor="#ffb62f"
        android:textSize="20sp"
        android:textStyle="bold" />


    </RelativeLayout>
</ScrollView>