<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pamukkale"
    android:background="@drawable/login">

    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/pamukkale"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/pamukkale" />

        <ImageView
            android:id="@+id/pamukkale2"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/pamukkale2" />

        <ImageView
            android:id="@+id/pamukkale3"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/pamukkale3" />

    </ViewFlipper>

    <TextView
        android:id="@+id/tv_pamukkale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:text="PAMUKKALE TRAVERTENLERİ"
        android:textColor="#cfffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/aciklama"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tv_pamukkale"
        android:layout_marginTop="10dp"
        android:text="Pamukkale Travertenleri, ülkemizin sayılı doğa güzelliklerinden bir tanesidir. Bembeyaz olması ile temizlik ve saflık duygularını insanlara hatırlatan özel bir yerdir . Hem güzelliği hem de şifalı olması yönü ile 1988 yılından beri UNESCO Dünya Malı listesinde yer almaktadır . Suların Termal ve şifalı olmasından dolayı , romatizma, yüksek tansiyon, kalp – damar hastalıklarına iyi gelmektedir"
        android:textColor="#cc9962"
        android:textSize="19sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ileri"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/oksag" />

    <ImageView
        android:id="@+id/geri"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="265dp"
        android:layout_marginStart="0dp"
        app:srcCompat="@drawable/oksol"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/resimaciklama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ileri"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Resimleri Değiştirmek için"
        android:textColor="#ffb62f"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>